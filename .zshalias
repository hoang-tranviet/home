### ls related updates
alias ls="ls --color=auto"
alias ll="ls -l" 
alias la="ls -a"
alias lla="ls -la"


### package managmeent related
alias agi="sudo apt-get install"
alias ags="sudo apt-cache search"
alias agg="sudo apt-get update && sudo apt-get upgrade"
alias acf="apt-cache find"

